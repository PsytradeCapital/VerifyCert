# Environment Configuration
NODE_ENV=development
PORT=3001

# Blockchain Configuration
AMOY_RPC_URL=https://rpc-amoy.polygon.technology/
NETWORK=amoy
CHAIN_ID=80002
EXPLORER_URL=https://amoy.polygonscan.com/
PRIVATE_KEY=your_private_key_here
CONTRACT_ADDRESS=0x6c9D554C721dA0CEA1b975982eAEe1f924271F50

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Sender Information
FROM_NAME=VerifyCert
FROM_EMAIL=noreply@verifycert.com

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Authentication Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative SMS (Africa's Talking - for African regions)
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key
AFRICAS_TALKING_SENDER_ID=your_sender_id

# Database Configuration
DATABASE_PATH=./data/verifycert.db

# Rate Limiting
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5