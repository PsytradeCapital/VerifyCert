{
  "name": "verify-cert-frontend",
  "version": "1.0.0",
  "description": "Frontend for VerifyCert blockchain certificate verification system",
  "homepage": "/",
  "private": true,
  "dependencies": {
    "@types/node": "^16.18.39",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "ethers": "^6.7.1",
    "framer-motion": "^10.18.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.14.2",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "verify-cert": "file:..",
    "web-push": "^3.6.7",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "autoprefixer": "^10.4.14",
    "babel-plugin-import": "^1.13.8",
    "bundlesize": "^0.18.1",
    "compression-webpack-plugin": "^11.1.0",
    "cypress": "^13.1.0",
    "cypress-metamask": "^1.0.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.27",
    "serve": "^14.2.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "terser-webpack-plugin": "^5.3.14",
    "ts-node": "^10.9.1",
    "vercel": "^32.0.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "react-scripts build",
    "build:craco": "craco build",
    "build:no-lint": "set \"CI=false\" && set \"ESLINT_NO_DEV_ERRORS=true\" && react-scripts build",
    "build:optimized": "node scripts/pre-build-optimization.js && npm run build",
    "build:analyze": "node scripts/pre-build-optimization.js && set ANALYZE=true && craco build",
    "test": "craco test --watchAll=false",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test start http://localhost:3000 cypress:run",
    "e2e:open": "start-server-and-test start http://localhost:3000 cypress:open",
    "build:production": "REACT_APP_NODE_ENV=production npm run build",
    "preview": "serve -s build -l 3000",
    "deploy:vercel": "vercel --prod",
    "deploy:vercel:preview": "vercel",
    "test:pwa": "node test-pwa.js",
    "test:pwa:headless": "node test-pwa.js --headless true",
    "test:pwa:all-browsers": "node test-pwa.js --browsers chrome,firefox,safari",
    "analyze": "npm run build:analyze",
    "analyze:server": "npx webpack-bundle-analyzer build/static/js/*.js",
    "size": "npm run build && npx bundlesize",
    "build:full": "npm run build && node scripts/post-build-analysis.js",
    "optimize": "node scripts/pre-build-optimization.js",
    "test:accessibility": "npm run test -- --testNamePattern=\"Screen Reader\"",
    "test:screen-reader": "ts-node src/scripts/run-screen-reader-tests.ts",
    "test:screen-reader:watch": "nodemon --exec \"npm run test:screen-reader\" --watch src/components --watch src/utils --ext ts,tsx",
    "test:a11y": "npm run test:accessibility && npm run test:screen-reader",
    "test:a11y:ci": "npm run test:accessibility --watchAll=false && npm run test:screen-reader",
    "test:cross-browser": "node scripts/run-cross-browser-tests.js",
    "test:cross-browser:manual": "echo 'Please follow the manual testing checklist in scripts/manual-browser-test-checklist.md'",
    "test:browsers": "npm run test:cross-browser",
    "test:browsers:chrome": "npm run test:cross-browser -- --browsers=chrome",
    "test:browsers:firefox": "npm run test:cross-browser -- --browsers=firefox",
    "test:browsers:edge": "npm run test:cross-browser -- --browsers=edge",
    "test:browsers:safari": "npm run test:cross-browser -- --browsers=webkit",
    "test:unit": "npm test -- --coverage --watchAll=false",
    "test:integration": "npm test -- src/tests/integration.test.tsx --watchAll=false",
    "test:e2e": "cypress run --spec \"cypress/e2e/ui-ux-complete.cy.js\"",
    "test:performance": "npm run build && npm run analyze",
    "test:visual": "cypress run --spec \"cypress/e2e/visual-regression.cy.js\"",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:comprehensive:unit": "node scripts/run-comprehensive-tests.js unit",
    "test:comprehensive:integration": "node scripts/run-comprehensive-tests.js integration",
    "test:comprehensive:e2e": "node scripts/run-comprehensive-tests.js e2e",
    "test:comprehensive:all": "node scripts/run-comprehensive-tests.js unit integration e2e accessibility performance",
    "test:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "test:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "test:desktop": "cypress run --config viewportWidth=1280,viewportHeight=720"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "sideEffects": false
}
